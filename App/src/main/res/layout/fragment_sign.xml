<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:id="@+id/top_title_bar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        layout="@layout/title_bar_setup" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="266dp">
                <com.amap.api.maps2d.MapView
                    android:id="@+id/map"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"/>
                <TextView
                    android:id="@+id/marker_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:gravity="center"
                    android:text=""
                    android:background="#8fff"
                    android:textColor="#111"
                    android:textSize="12sp"/>
                <ImageView
                    android:id="@+id/icon_relocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:alpha="0.7"
                    android:src="@mipmap/icon_relocation"
                    android:layout_alignParentBottom="true"
                    android:layout_margin="10dp"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#DCDCDC"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:weightSum="300">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="60"
                    android:layout_height="45dp"
                    android:layout_gravity="center">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@mipmap/icon_sign_1"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="240"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/today_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14dp"
                        android:text="2016-02-08 星期二"/>
                    <TextView
                        android:id="@+id/time_range_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14dp"
                        android:text="默认班次: 09:00-18:00"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14dp"
                        android:text="您需要在公司规定的时间，电脑，手机签到"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout android:layout_width="match_parent" android:layout_height="1dp" android:background="#DCDCDC"/>
            <!-- time in -->
            <LinearLayout
                android:id="@+id/in_area"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="5dp"
                    android:weightSum="300">
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight="60"
                        android:layout_height="45dp"
                        android:gravity="center">
                        <ImageView
                            android:id="@+id/in_icon"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@mipmap/icon_sign_2"/>
                        <TextView
                            android:id="@+id/in_time_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:text=""/>
                    </RelativeLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="190"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="14dp"
                                android:text="签到"/>
                            <TextView
                                android:id="@+id/in_over_txt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:textColor="@color/red"
                                android:text="迟到"/>
                        </LinearLayout>
                        <TextView
                            android:id="@+id/in_location_txt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:lines="1"
                            android:textSize="14dp"
                            android:text="TEXTTEXTTEXT"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/go_in_request"
                        android:layout_width="0dp"
                        android:layout_weight="50"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/in_req_text"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="申述"
                            android:textColor="#88f"
                            android:gravity="center"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout android:layout_width="match_parent" android:layout_height="1dp" android:background="#DCDCDC"/>
            </LinearLayout>

            <!-- time out -->
            <LinearLayout
                android:id="@+id/out_area"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:orientation="horizontal"
                    android:weightSum="300">
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight="60"
                        android:layout_height="45dp"
                        android:gravity="center">
                        <ImageView
                            android:id="@+id/out_icon"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@mipmap/icon_sign_2"/>
                        <TextView
                            android:id="@+id/out_time_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:text=""/>
                    </RelativeLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="190"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="14dp"
                                android:text="签退"/>
                            <TextView
                                android:id="@+id/out_over_txt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:textColor="@color/red"
                                android:text="早退"/>
                        </LinearLayout>
                        <TextView
                            android:id="@+id/out_location_txt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:lines="1"
                            android:textSize="14dp"
                            android:text="TEXTTEXTTEXT"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/go_out_request"
                        android:layout_width="0dp"
                        android:layout_weight="50"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/out_req_text"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="申述"
                            android:textColor="#88f"
                            android:gravity="center"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout android:layout_width="match_parent" android:layout_height="1dp" android:background="#DCDCDC"/>
            </LinearLayout>

            <!-- End Line -->
            <LinearLayout
                android:id="@+id/end_area"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:orientation="horizontal"
                    android:weightSum="300">
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight="60"
                        android:layout_height="45dp"
                        android:gravity="center">
                        <ImageView
                            android:id="@+id/end_icon"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@mipmap/icon_sign_3"/>
                    </RelativeLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="190"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="10dp"
                                android:text=""/>
                        </LinearLayout>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:lines="1"
                            android:textSize="11dp"
                            android:text="工作已经结束了，做您想做的事情吧！"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout android:layout_width="match_parent" android:layout_height="1dp" android:background="#DCDCDC"/>
            <RelativeLayout
                android:id="@+id/bottom_area"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/time_in_out_btn"
                    android:layout_width="85dp"
                    android:layout_height="85dp"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/time_in_background"
                    android:text="签到\n10:08"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:gravity="center"/>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>