<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/titleBar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <include
        android:id="@+id/top_title_bar"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        layout="@layout/title_bar_common" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="@drawable/form_element_background"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/label1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textSize="17sp"
                android:text="培训类型:"/>

            <ImageView
                android:id="@+id/imgDropdown1"
                android:layout_width="10dp"
                android:layout_height="8dp"
                android:layout_marginRight="8dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:src="@mipmap/ic_dropdown"/>

            <TextView
                android:id="@+id/txtTrype"
                android:layout_toLeftOf="@+id/imgDropdown1"
                android:layout_toRightOf="@+id/label1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_centerVertical="true"
                android:hint="--请选择--"
                android:textSize="17sp"
                android:textColor="@color/black"
                android:text=""/>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:background="@drawable/form_element_background"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/label4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textSize="17sp"
                android:text="课程名称:"/>

            <ImageView
                android:id="@+id/imgDropdown4"
                android:layout_width="10dp"
                android:layout_height="8dp"
                android:layout_marginRight="8dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:src="@mipmap/ic_dropdown"/>

            <EditText
                android:id="@+id/editCouna"
                android:layout_toLeftOf="@+id/imgDropdown4"
                android:layout_toRightOf="@+id/label4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_centerVertical="true"
                android:background="@color/white"
                android:singleLine="true"
                android:textSize="17sp"
                android:textColor="@color/black"
                android:text=""/>

            <TextView
                android:id="@+id/txtCouna"
                android:layout_toLeftOf="@+id/imgDropdown4"
                android:layout_toRightOf="@+id/label4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_centerVertical="true"
                android:background="@color/white"
                android:singleLine="true"
                android:textSize="17sp"
                android:textColor="@color/black"
                android:hint="--请选择--"
                android:text=""/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:background="@drawable/form_element_background"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/label2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textSize="17sp"
                android:text="培训开始日期:"/>

            <ImageView
                android:id="@+id/imgCalendar2"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:src="@mipmap/icon_calendar"/>

            <TextView
                android:id="@+id/txtBegda"
                android:layout_toRightOf="@+id/label2"
                android:layout_toLeftOf="@+id/imgCalendar2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_centerVertical="true"
                android:textSize="17sp"
                android:textColor="@color/black"
                android:text=""/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:background="@drawable/form_element_background"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/label3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textSize="17sp"
                android:text="培训结束日期:"/>

            <ImageView
                android:id="@+id/imgCalendar3"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:src="@mipmap/icon_calendar"/>

            <TextView
                android:id="@+id/txtEndda"
                android:layout_toLeftOf="@+id/imgCalendar3"
                android:layout_toRightOf="@+id/label3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_centerVertical="true"
                android:textSize="17sp"
                android:textColor="@color/black"
                android:text=""/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:background="@drawable/form_element_background"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:text="培训结果:"/>
            <EditText
                android:id="@+id/editTrrst"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="15dp"
                android:background="@color/white"
                android:singleLine="true"
                android:textSize="17sp"
                android:textColor="@color/black"
                android:text=""/>

        </LinearLayout>

        <TextView
            android:id="@+id/txtSave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:padding="13dp"
            android:gravity="center"
            android:background="@drawable/btn_background"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:text="保  存"/>

    </LinearLayout>


</LinearLayout>
