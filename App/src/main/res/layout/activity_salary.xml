<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#EFEFEF">

    <include
        android:id="@+id/top_title_bar"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        layout="@layout/title_bar_common" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <com.app.hrms.widget.ClickEffectImageView
                android:id="@+id/btnPrevMonth"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@mipmap/previous_month" />

            <TextView
                android:id="@+id/currentMonth"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="3"
                android:gravity="center"
                android:text="2014年6月"
                android:textColor="@color/black"
                android:textSize="18dp" />

            <com.app.hrms.widget.ClickEffectImageView
                android:id="@+id/btnNextMonth"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@mipmap/next_month" />
        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ff8091a8" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:gravity="center_horizontal"
            android:background="#28A7E2"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_centerHorizontal="true"
                android:textColor="@color/white"
                android:textSize="22sp"
                android:text="实发工资(元)"/>

            <TextView
                android:id="@+id/txtSalary1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_centerInParent="true"
                android:textColor="#ffc000"
                android:textSize="50sp"
                android:text="0.00"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="2"
            android:orientation="vertical"
            android:background="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:weightSum="2"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/btnSalary1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:padding="20dp"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/flower1"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@mipmap/ic_flower" />
                    <TextView
                        android:layout_toRightOf="@+id/flower1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="22sp"
                        android:text="应发工资"/>
                    <TextView
                        android:id="@+id/txtSalary2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:textSize="30sp"
                        android:textColor="@color/black"
                        android:text="0.00"/>

                </RelativeLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:background="@color/gray" />

                <RelativeLayout
                    android:id="@+id/btnSalary2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:padding="20dp"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/flower2"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@mipmap/ic_flower" />
                    <TextView
                        android:layout_toRightOf="@+id/flower2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="22sp"
                        android:text="社会保险"/>
                    <TextView
                        android:id="@+id/txtSalary3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:textSize="30sp"
                        android:textColor="@color/black"
                        android:text="0.00"/>

                </RelativeLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@color/gray"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:weightSum="2">

                <RelativeLayout
                    android:id="@+id/btnSalary3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:padding="20dp"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/flower3"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@mipmap/ic_flower" />
                    <TextView
                        android:layout_toRightOf="@+id/flower3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="22sp"
                        android:text="个人所得税"/>
                    <TextView
                        android:id="@+id/txtSalary4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:textSize="30sp"
                        android:textColor="@color/black"
                        android:text="0.00"/>

                </RelativeLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:background="@color/gray" />

                <RelativeLayout
                    android:id="@+id/btnSalary4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:padding="20dp"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/flower4"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@mipmap/ic_flower" />
                    <TextView
                        android:layout_toRightOf="@+id/flower4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="22sp"
                        android:text="其他扣除"/>
                    <TextView
                        android:id="@+id/txtSalary5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:textSize="30sp"
                        android:textColor="@color/black"
                        android:text="0.00"/>

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>

